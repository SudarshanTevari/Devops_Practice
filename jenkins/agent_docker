pipeline{
    agent{docker 'alpine:latest"}
    options{newContainerPerStage()}
    stages{
        stage('Stage1'){
            steps{
                sh 'echo "Container1 Hostname: `hostname`"'
            }
        }
        stage('Stage2'){
            steps{
                sh 'echo "Container2 Hostname: `hostname`"'
            }
        }
    }
}
